<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana6.Registro"
             NavigationPage.HasNavigationBar="False">
             
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de registro" FontSize="24" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtId" Placeholder="Id" Keyboard="Numeric"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre" />
            <Entry x:Name="txtApellido" Placeholder="Apellido" />
            <Entry x:Name="txtEdad" Placeholder="Edad" Keyboard="Numeric"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                

                <Button Grid.Row="0" Grid.Column="0"  x:Name="btnInsertar" Text="Insertar" Clicked="btnInsertar_Clicked"/>
                <Button Grid.Row="0" Grid.Column="1"  x:Name="btnCancelar" Text="Cancelar" Clicked="btnCancelar_Clicked"/>


            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>